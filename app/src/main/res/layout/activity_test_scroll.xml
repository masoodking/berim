<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="ir.ac.ut.berim.TestScrollActivity">
        <RelativeLayout
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.ksoichiro.android.observablescrollview.ObservableListView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeDescription"/>
            <LinearLayout
                android:id="@+id/placeHeaderMenuSticky"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/place_sticky_height"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/placeRate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:textSize="44dp"
                    android:textAlignment="center"
                    android:text="3.7"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/PlaceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="26dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/PlaceLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="20dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location"
                    android:padding="5dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"
                    android:padding="5dp"/>
            </LinearLayout>

        </RelativeLayout>

        <!--<android.support.design.widget.FloatingActionButton android:id="@+id/fab"-->
            <!--android:layout_width="wrap_content" android:layout_height="wrap_content"-->
            <!--android:layout_gravity="bottom|end" android:layout_margin="@dimen/fab_margin"-->
            <!--android:src="@android:drawable/ic_dialog_email" />-->
</android.support.design.widget.CoordinatorLayout>
