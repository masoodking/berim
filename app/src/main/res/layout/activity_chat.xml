<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccd0ff"
    tools:context="ir.ac.ut.berim.ChatActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@android:color/white"
        android:id="@+id/chat_header">

        <ImageView
            android:id="@+id/list_icon_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:padding="3dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/place_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/place_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:paddingLeft="20dp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/chat_header"
        android:layout_above="@+id/relLayout">
    </ListView>
    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/attach"
            android:padding="0dp"
            android:background="#ffffff"
            android:layout_alignParentRight="true" />
        <!--<ImageButton-->
            <!--android:id="@+id/attach_button"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:padding="10dp"-->
            <!--android:background="#ffffff"-->
            <!--android:src="@drawable/attach"-->
            <!--android:layout_toLeftOf="@id/send_button"/>-->

        <EditText
            android:id="@+id/chat_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/send_button"/>
    </RelativeLayout>

</RelativeLayout>
