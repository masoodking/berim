<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/placeBackground"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/default_place">

    <RelativeLayout
        android:id="@+id/placeHeaderMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/place_sticky_height"
        android:layout_alignParentBottom="true"
        android:background="#88ffffff">

        <TextView
            android:id="@+id/placeRate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="3.7"
            android:textAlignment="center"
            android:textSize="44sp" />

        <LinearLayout
            android:id="@+id/texts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/placeRate"
            android:layout_toRightOf="@+id/image_map"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text="Name"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PlaceLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Location"
                android:textSize="12dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/image_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toEndOf="@+id/image_share"
            android:layout_toRightOf="@+id/image_share"
            android:layout_centerVertical="true"
            android:src="@drawable/location" />

        <ImageButton
            android:id="@+id/image_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/share" />
    </RelativeLayout>

    <TextView
        android:id="@+id/placeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeHeaderMenu" />
</RelativeLayout>
