<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/placeBackground"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/default_place"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:id="@+id/placeHeaderMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/place_sticky_height"
            android:background="#88ffffff"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/placeRate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="44sp"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                android:text="3.7"/>
        <LinearLayout
                android:id="@+id/texts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/placeRate"
                android:gravity="right"
                android:layout_toRightOf="@+id/image_map"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/PlaceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/PlaceLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Location"
                    android:textSize="13dp"/>
        </LinearLayout>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_map"
                android:src="@drawable/location"
                android:layout_toRightOf="@+id/image_share"
                android:padding="5dp"/>
        <ImageButton
                android:id="@+id/image_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                android:layout_alignParentLeft="true"
                android:padding="5dp"/>
    </RelativeLayout>
    <TextView
            android:id="@+id/placeDescription"
            android:text="placeList Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeHeaderMenu"/>
</RelativeLayout>
